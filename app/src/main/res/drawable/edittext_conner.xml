<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"
        android:state_enabled="true">

        <shape>

            <gradient

                android:startColor="#ffffff"
                android:endColor="#ffffff"
                android:angle="180"
                />

            <stroke
                android:width="2dp"
                android:color="#616161"/>

            <corners android:radius="30dp"/>

            <padding

                android:left="15dp"

                android:right="15dp"

                android:top="7dp"

                android:bottom="7dp" />

        </shape>

    </item>

    <item android:state_focused="true"
        android:state_enabled="true">

        <shape>

            <gradient

                android:startColor="#ffffff"
                android:endColor="#ffffff"
                android:angle="180" />

            <stroke
                android:width="2dp"
                android:color="#616161"/>

                <corners android:radius="30dp"/>

            <padding

                android:left="15dp"

                android:right="15dp"

                android:top="7dp"

                android:bottom="7dp" />

        </shape>

    </item>

    <item android:state_enabled="false">

        <shape>

            <gradient

                android:startColor="#ffffff"
                android:endColor="#ffffff"

                android:angle="180" />

            <corners android:radius="30dp"/>

            <padding

                android:left="15dp"

                android:right="15dp"

                android:top="7dp"

                android:bottom="7dp" />

        </shape>

    </item>



    <item android:state_enabled="true">

        <shape>

            <gradient

                android:startColor="#ffffff"
                android:endColor="#ffffff"

                android:angle="180" />

            <stroke

                android:width="1dp"
                android:color="#7d7d7d"/>

            <corners android:radius="30dp"/>

            <padding

                android:left="15dp"

                android:right="15dp"

                android:top="7dp"

                android:bottom="7dp" />

        </shape>

    </item>

</selector>
